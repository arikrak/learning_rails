<li id="<%= feed_item.id %>">

  <!-- change back?  link_to gravatar_for(feed_item.user), feed_item.user -->

  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>

  <span class="content"> <%= feed_item.content %>   </span>
  <span class="timestamp">
    Posted at <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>

  <%= render 'shared/delete_link', post_thing: feed_item  %>

</li>